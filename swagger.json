        "/tracks": {
            "post": {
                "summary": "Create new Track",
                "operationId": "post-track",
                "responses": {
                    "200": {
                        "description": "Track Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Track Schema",
                                    "type": "object",
                                    "properties": {
                                        "Name": "string",
                                        "AlbumId": {
                                            "type": "number",
                                            "min": 1,
                                            "max": 347
                                        },
                                        "GenreId": {
                                            "type": "number",
                                            "min": 1,
                                            "max": 25
                                        },
                                        "Composer": "string",
                                        "Milliseconds": "number",
                                        "Bytes": "number",
                                        "UnitPrice": "number"
                                    },
                                    "required": [
                                        "Name",
                                        "AlbumId",
                                        "GenreId",
                                        "Composer",
                                        "Milliseconds",
                                        "Bytes",
                                        "UnitPrice"
                                    ]
                                },
                                "examples": {
                                    "Success": {
                                        "value": {
                                            "status": 200,
                                            "message": "The Track <name> has been successfully added"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Tracks validation failed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Track Schema",
                                    "type": "object",
                                    "properties": {
                                        "Name": "string",
                                        "AlbumId": {
                                            "type": "number",
                                            "min": 1,
                                            "max": 347
                                        },
                                        "GenreId": {
                                            "type": "number",
                                            "min": 1,
                                            "max": 25
                                        },
                                        "Composer": "string",
                                        "Milliseconds": "number",
                                        "Bytes": "number",
                                        "UnitPrice": "number"
                                    },
                                    "required": [
                                        "Name",
                                        "AlbumId",
                                        "GenreId",
                                        "Composer",
                                        "Milliseconds",
                                        "Bytes",
                                        "UnitPrice"
                                    ]
                                },
                                "examples": {
                                    "GenreId not recognised": {
                                        "value": {
                                            "status": 400,
                                            "message": "Tracks validation failed: GenreId: Please enter a pre-defined genre between 1-25"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": [
                                    {
                                        "Name": "string",
                                        "AlbumId": "number",
                                        "GenreId": "number",
                                        "Composer": "string",
                                        "Milliseconds": "number",
                                        "Bytes": "number",
                                        "UnitPrice": "number"
                                    }
                                ],
                                "required": [
                                    "Name",
                                    "AlbumId",
                                    "GenreId",
                                    "Composer",
                                    "Milliseconds",
                                    "Bytes",
                                    "UnitPrice"
                                ]
                            },
                            "examples": {
                                "Create new student example": {
                                    "value": {
                                        "Name": "You Know My Name",
                                        "AlbumId": "110",
                                        "GenreId": "14",
                                        "Composer": "K. Petterson",
                                        "Milliseconds": "120234e64",
                                        "Bytes": "12563463423",
                                        "UnitPrice": "0.99"
                                    }
                                }
                            }
                        }
                    },
                    "description": "Details of the request body"
                },
                "description": "Create a new track",
                "tags": [
                    "Tracks"
